<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Common.DAO.PetsEntity" table="pets" schema="ghost">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="cid">
            <column name="cid" sql-type="int(11)"/>
        </property>
        <property name="itemId">
            <column name="itemId" sql-type="int(11)"/>
        </property>
        <property name="decorateId">
            <column name="decorateId" sql-type="int(11)"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="level">
            <column name="level" sql-type="int(11)"/>
        </property>
        <property name="hp">
            <column name="hp" sql-type="int(11)"/>
        </property>
        <property name="mp">
            <column name="mp" sql-type="int(11)"/>
        </property>
        <property name="exp">
            <column name="exp" sql-type="int(11)"/>
        </property>
        <property name="type">
            <column name="type" sql-type="int(3)"/>
        </property>
        <property name="slot">
            <column name="slot" sql-type="int(3)"/>
        </property>
    </class>
</hibernate-mapping>